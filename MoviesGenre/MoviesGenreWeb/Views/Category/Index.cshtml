@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create new Category
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-hover table-stripped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Movie Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>

                    <td width="30%">
                        @obj.Description
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary alert-dark"><i class="bi bi-pencil-square"></i> Edit</a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-primary alert-success"><i class="bi bi-trash"></i> Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

